{
  "compilerOptions": {
    "rootDir": "src",
    "composite": true,
    "target": "esnext",
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "element-plus/global"
    ],
    "paths": {
      "@/*": [
        "./src/renderer/src/*"
      ],
      "@W/*": [
        "./src/wavy/*"
      ],
      "@M/*": [
        "./src/main/*"
      ],
    }
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.d.ts",
    "src/renderer/**/*.tsx",
    "src/renderer/**/*.vue",
    "src/wavy/**/*.ts",
  ],
  "exclude": [
    "src/**/__tests__/*.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}